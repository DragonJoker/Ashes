{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
  "name": "ashes",
  "version-date": "2025-08-25",
  "builtin-baseline": "dd3097e305afa53f7b4312371f62058d2e665320",
  "dependencies": [
    "vulkan-headers"
  ],
  "default-features": [
    "vulkan"
  ],
  "vcpkg-configuration": {
    "overlay-ports": [
      "./data/vcpkg/ports/draco"
    ]
  },
  "features": {
    "direct3d11": {
      "description": "Compiles Direct3D11 renderer.",
      "dependencies": [
        "directxsdk",
        "spirv-cross"
      ]
    },
    "opengl": {
      "description": "Compiles OpenGL renderer.",
      "dependencies": [
        "opengl",
        "spirv-cross"
      ]
    },
    "xbox": {
      "description": "Compiles XBox renderer.",
      "supports": "uwp",
      "dependencies": [
        "directxsdk",
        "spirv-cross"
      ]
    },
    "samples": {
      "description": "Sample applications.",
      "dependencies": [
        "assimp",
        {
          "name": "wxwidgets",
          "platform": "!linux"
        }
      ]
    },
    "templates": {
      "description": "Template applications.",
      "dependencies": [
        "glfw3"
      ]
    },
    "tests": {
      "description": "Test applications.",
      "dependencies": [
        {
          "name": "wxwidgets",
          "platform": "!linux"
        }
      ]
    },
    "util": {
      "description": "Utils library.",
      "dependencies": [
        "glslang"
      ]
    },
    "vulkan": {
      "description": "Compiles Vulkan renderer."
    }
  }
}
