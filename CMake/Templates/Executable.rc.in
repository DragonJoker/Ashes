#include "resource.h"

/////////////////////////////////////////////////////////////////////////////
//
// Icon
//

// Icon with lowest ID value placed first to ensure application icon
// remains consistent on all systems.
IDR_MAINFRAME	ICON	".\\${PROJECT_NAME}.ico"

#if ${${PROJECT_NAME}_WXWIDGET}
#	include "wx/msw/wx.rc"
#endif

/////////////////////////////////////////////////////////////////////////////
//
// Version
//
1 VERSIONINFO
