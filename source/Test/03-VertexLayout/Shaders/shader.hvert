struct VertexInput
{
	float4 position : POSITION;
	float4 colour : COLOR;
};

struct VertexOutput
{
	float4 colour : COLOR;
	float4 position : SV_POSITION;
};

VertexOutput mainVx( in VertexInput input )
{
	VertexOutput output;
	output.colour = input.colour;
	output.position = rendererScalePosition( input.position );
	return output;
}
