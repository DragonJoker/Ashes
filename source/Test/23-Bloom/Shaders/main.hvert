struct VertexInput
{
	float4 position : POSITION;
	float2 uv : TEXCOORD;
};

struct VertexOutput
{
	float2 uv : TEXCOORD;
	float4 position : SV_POSITION;
};

VertexOutput mainVx( in VertexInput input )
{
	VertexOutput output;
	output.uv = input.uv;
	output.position = rendererScalePosition( input.position );
	return output;
}
