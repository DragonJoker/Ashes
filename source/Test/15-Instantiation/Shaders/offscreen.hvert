struct VertexInput
{
	float4 position : POSITION;
	float3 uv : TEXCOORD;
	float4x4 transform : MATRIX;
};

struct VertexOutput
{
	float2 uv : TEXCOORD;
	float4 position : SV_POSITION;
};

cbuffer Matrix : register(b1)
{
	float4x4 mtxViewProjection;
};

VertexOutput mainVx( in VertexInput input )
{
	VertexOutput output;
	output.uv = input.uv;
	output.position = mul( mtxProjection, mul( transform, rendererScalePosition( input.position ) ) ).xyww;
	return output;
}
