struct VertexInput
{
	float4 position : POSITION;
};

struct VertexOutput
{
	float3 position : POSITION;
	float4 svPosition : SV_POSITION;
};

cbuffer Matrix : register(b0)
{
	float4x4 mtxViewProjection;
};

VertexOutput mainVx( in VertexInput input )
{
	VertexOutput output;
	output.position = ashesScalePosition( input.position ).xyz;
	output.svPosition = mul( mtxViewProjection, input.position );
	return output;
}
