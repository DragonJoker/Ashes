struct VertexInput
{
	float4 position : POSITION;
	float2 uv : TEXCOORD;
};

struct VertexOutput
{
	float2 uv : TEXCOORD;
	float4 position : SV_POSITION;
};

cbuffer Matrix : register(b1)
{
	float4x4 mtxProjection;
};

cbuffer Model : register(b2)
{
	float4x4 mtxModel;
};

VertexOutput mainVx( in VertexInput input )
{
	VertexOutput output;
	output.uv = input.uv;
	output.position = mul( mtxProjection, mul( mtxModel, rendererScalePosition( input.position ) ) );
	return output;
}
